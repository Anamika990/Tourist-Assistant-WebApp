    <div class="header-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-sm-6 col-6 header-top-left">

                </div>
                <div class="col-lg-6 col-sm-6 col-6 header-top-right">
                    <div class="header-social">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                        <a href="#"><i class="fa fa-behance"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container main-menu">
        <div class="row align-items-center justify-content-between d-flex">
            <div id="logo">
                <a href="HomePage.aspx"><b><i style="font-size: 18px;">Travel Guide</i></b></a>
            </div>
            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li>@Html.ActionLink("Home", "Index", "Travelar")</li>

                    <li class="menu-has-children">
                        <a href="#">Tourist Group</a>
                        <ul>
                            <li><a href="blog-home.html">Travels of Bangladesh</a></li>
                            <li><a href="blog-single.html">Easy Travels</a></li>
                            <li><a href="blog-single.html">Leady Traveler</a></li>
                            <li><a href="blog-single.html">Travels BD</a></li>
                            <li><a href="blog-single.html">Chuti Travel</a></li>
                            <li><a href="blog-single.html">Tourist BD</a></li>
                        </ul>
                    </li>


                    <li class="menu-has-children">
                        <a href="">Services</a>
                        <ul>
                            <li>@Html.ActionLink("Hire Guide", "Hireguide", "Travelar")</li>

                        </ul>
                    </li>
                    @*<li class="dropdown for-notification">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-bell"></i>
                            <span class="count bg-danger">3</span>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="notification">
                            <p class="red">You have 3 Notification</p>
                            <a class="dropdown-item media bg-flat-color-1" href="#">
                                <i class="fa fa-check"></i>
                                <p>Go to Event Approved Page</p>
                            </a>

                        </div>
                    </li>*@


                    <li class="menu-has-children">
                        <a><img src="@ViewBag.TravlerImage" width="30" height="30" style="border-radius:50%" /></a>
                        <ul>
                            <li>@Html.ActionLink("Signout", "Signout", "Home")</li>
                            <li>@Html.ActionLink("Profile", "Index", "Home")</li>

                        </ul>

                    </li>


                </ul>
            </nav>
        </div>
    </div>
</header>
<br><br>


<section>
    <div id="colorlib-main">
        <section class="ftco-section">
            <div class="container">
                @foreach (var item in Model)
                {
                    if (item.Status == "Approved")
                    {


                        <div class="row px-md-4">
                            <div class="col-md-12">
                                <div class="blog-entry ftco-animate d-md-flex">
                                    <a href="single.html" class="img img-2" style="background-image: url(@item.Image);"></a>
                                    <div class="text text-2 pl-md-4">
                                        <h3 class="mb-2"><a href="#">@item.Travelgroup</a></h3>
                                        <div class="meta-wrap">
                                            <p class="meta">
                                                <span><i class="icon-calendar mr-2"></i>Start Date:@item.StartDate</span>
                                                <span><a href="single.html"><i class="icon-folder-o mr-2"></i>Travel</a></span>
                                                <span><i class="icon-calendar mr-2"></i>End Date:@item.EndDate</span>
                                            </p>
                                        </div>
                                        <p class="mb-4">
                                            @item.Details<br />
                                            Form: @item.DestinationForm<br />
                                            To: @item.DestinationTo<br />
                                            Amout: @item.Price BDT<br />
                                        </p>
                                        <form method="post">
                                            <input type="text" name="UserName" value="@ViewBag.TravelarName" hidden />
                                            <input type="text" name="Email" value="@ViewBag.TravelarEmail" hidden />
                                            <input type="text" name="Phone" value="@ViewBag.TravelarPhone" hidden />
                                            <input type="text" name="Address" value="@ViewBag.TravelarAddress" hidden />
                                            <input type="text" name="Gender" value="@ViewBag.TravelarGender" hidden />
                                            <input type="text" name="TravelarGroupName" value="@item.Travelgroup" hidden />
                                            <input type="text" name="DestinationForm" value="@item.DestinationForm" hidden />
                                            <input type="text" name="DestinationTo" value="@item.DestinationTo" hidden />
                                            <input type="submit" value="Booking" class="buttdesign" />
                                        </form>
                                        <p><a href="#" class="btn-custom">Read More <span class="ion-ios-arrow-forward"></span></a></p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                }
                <div class="row">
                    <div class="col text-center text-md-left">
                        <div class="block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>
    <br /><br /><br />
</section>



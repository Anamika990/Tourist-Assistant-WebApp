<section class="default-banner active-blog-slider">
    <div class="item-slider relative" style="        background: url(/Content/img/sun.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        ">
        <div class="overlay" style="background: rgba(0,0,0,.3)"></div>
        <div class="container" style="padding:250px">
            <h2 style="text-align:center;color:white"><i><strong>Strong Your Profile with Adventure Trip!</strong></i></h2>
        </div>
    </div>

</section>

<section>
    <div class="container">
        <br /><br />
        <center>
            <img src="@ViewBag.image" height="100" width="100" style="border-radius:50%" />
            <br /><br />
            <h5 style="color:gray">Name: @ViewBag.Name</h5>
            <h5 style="color:gray">Phone: @ViewBag.phone</h5>
            <h5 style="color:gray">Email: @ViewBag.Email</h5>
            <h5 style="color:gray">Address: @ViewBag.adress</h5>
            <h5 style="color:gray">Gender: @ViewBag.gender</h5>
        </center>
        <br /><br />
    </div>

</section>


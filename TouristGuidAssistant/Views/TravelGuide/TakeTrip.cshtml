@model IEnumerable<TouristGuidAssistant.Models.HireGuide>

@{
    ViewBag.Title = "TakeTrip";
    Layout = "~/Views/Shared/_TravelGuide_Layout.cshtml";
}
@*<section style="background-color:black;">
        <div style="padding:100px;">

        </div>
    </section>*@

<section class="default-banner active-blog-slider">
    <div class="item-slider relative" style="        background: url(/Content/img/sun.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        ">
        <div class="overlay" style="background: rgba(0,0,0,.3)"></div>
        <div class="container" style="padding:250px">
            <h1 style="text-align:center;color:white"><i>Do Early Response!</i></h1>
        </div>
    </div>

</section>

<br />
<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DestinationFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TravlerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TravlerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <button class="btn btn-success" style="color:black">@Html.ActionLink("Accept", "Edit", new { id = item.HireID })</button> |
                    <button class="btn btn-danger" style="color:black">@Html.ActionLink("Delete", "Delete", new { id = item.HireID })</button>
                </td>
            </tr>
        }

    </table>
</div>

    <!-- Header-->

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">

            </div>
        </div>

        <center>
            <div style="padding:50px;">
                <h2>Event Status</h2>
                <br /><br />
                <table class="table table-active table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EventType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DestinationForm)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DestinationTo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DestinationForm)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DestinationTo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <img src=" @Html.DisplayFor(modelItem => item.Image)" width="30" height="30" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <button class="btn btn-warning">@Html.ActionLink("Approved", "Approved", new { id = item.EventId })</button>

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </center>
    </div>

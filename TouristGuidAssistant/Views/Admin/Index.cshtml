                        <a class="dropdown-item" href="#">link2</a>

                    </div>


                </div>*@
            <div class="col-sm-5">
                <div class="user-area dropdown float-right">

                    @Html.ActionLink("Signout", "Signout", "Home", new { @class = "buttoncolor" })


                </div>

            </div>

        </div>

    </header><!-- /header -->
    <!-- Header-->

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">

            </div>
        </div>

        <center>
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h4>World</h4>
                    </div>
                    <div class="Vector-map-js" style="width:100%;">
                        <div id="vmap" class="vmap" style="height: 265px;"></div>
                    </div>
